    <div class="container">
        <header>
            <h1>üèõÔ∏è H·ªá th·ªëng tra c·ª©u Ngh·ªã ƒë·ªãnh</h1>
            <p>Qu·∫£n l√Ω v√† t√¨m ki·∫øm vƒÉn b·∫£n ph√°p lu·∫≠t m·ªôt c√°ch d·ªÖ d√†ng</p>
        </header>

        <div class="main-content">
            <!-- Th·ªëng k√™ -->
            <div class="stats">
                <div class="stat-box">
                    <div class="number" id="docCount">0</div>
                    <div class="label">VƒÉn b·∫£n</div>
                </div>
                <div class="stat-box">
                    <div class="number" id="searchCount">0</div>
                    <div class="label">L∆∞·ª£t tra c·ª©u</div>
                </div>
            </div>

            <!-- Th√™m vƒÉn b·∫£n -->
            <div class="section">
                <h2>üìù Th√™m vƒÉn b·∫£n m·ªõi</h2>
                <div class="input-group">
                    <input type="text" id="docTitle" placeholder="T√™n vƒÉn b·∫£n (VD: Ngh·ªã ƒë·ªãnh 123/2024/Nƒê-CP)">
                </div>
                <div class="input-group">
                    <input type="text" id="docUrl" placeholder="ƒê∆∞·ªùng link vƒÉn b·∫£n">
                    <button onclick="addDocument()">Th√™m vƒÉn b·∫£n</button>
                </div>

                <div class="document-list" id="documentList"></div>
            </div>

            <!-- T√¨m ki·∫øm -->
            <div class="section">
                <h2>üîç Tra c·ª©u ƒëi·ªÅu kho·∫£n</h2>
                <div class="input-group">
                    <input type="text" id="searchQuery" placeholder="Nh·∫≠p t·ª´ kh√≥a t√¨m ki·∫øm (VD: ƒëi·ªÅu 5, kho·∫£n 2, quy·ªÅn l·ª£i ng∆∞·ªùi lao ƒë·ªông...)">
                    <button onclick="searchDocuments()">T√¨m ki·∫øm</button>
                </div>

                <div id="searchResults"></div>
            </div>
        </div>
    </div>

    <script>
        let documents = [];
        let searchCounter = 0;

        // Load d·ªØ li·ªáu t·ª´ b·ªô nh·ªõ
        function loadData() {
            const saved = localStorage.getItem('legalDocuments');
            if (saved) {
                documents = JSON.parse(saved);
            }
            const counter = localStorage.getItem('searchCounter');
            if (counter) {
                searchCounter = parseInt(counter);
            }
            updateUI();
        }

        // L∆∞u d·ªØ li·ªáu
        function saveData() {
            localStorage.setItem('legalDocuments', JSON.stringify(documents));
            localStorage.setItem('searchCounter', searchCounter.toString());
        }

        // Th√™m vƒÉn b·∫£n
        function addDocument() {
            const title = document.getElementById('docTitle').value.trim();
            const url = document.getElementById('docUrl').value.trim();

            if (!title || !url) {
                alert('Vui l√≤ng nh·∫≠p ƒë·∫ßy ƒë·ªß t√™n v√† ƒë∆∞·ªùng link vƒÉn b·∫£n!');
                return;
            }

            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                alert('ƒê∆∞·ªùng link ph·∫£i b·∫Øt ƒë·∫ßu b·∫±ng http:// ho·∫∑c https://');
                return;
            }

            documents.push({
                id: Date.now(),
                title: title,
                url: url,
                addedDate: new Date().toLocaleDateString('vi-VN')
            });

            document.getElementById('docTitle').value = '';
            document.getElementById('docUrl').value = '';

            saveData();
            updateUI();
            alert('ƒê√£ th√™m vƒÉn b·∫£n th√†nh c√¥ng!');
        }

        // X√≥a vƒÉn b·∫£n
        function deleteDocument(id) {
            if (confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a vƒÉn b·∫£n n√†y?')) {
                documents = documents.filter(doc => doc.id !== id);
                saveData();
                updateUI();
            }
        }

        // T√¨m ki·∫øm
        async function searchDocuments() {
            const query = document.getElementById('searchQuery').value.trim();
            
            if (!query) {
                alert('Vui l√≤ng nh·∫≠p t·ª´ kh√≥a t√¨m ki·∫øm!');
                return;
            }

            if (documents.length === 0) {
                alert('Ch∆∞a c√≥ vƒÉn b·∫£n n√†o trong h·ªá th·ªëng. Vui l√≤ng th√™m vƒÉn b·∫£n tr∆∞·ªõc!');
                return;
            }

            searchCounter++;
            saveData();
            updateStats();

            const resultsDiv = document.getElementById('searchResults');
            resultsDiv.innerHTML = '<div class="loading">‚è≥ ƒêang t√¨m ki·∫øm trong c√°c vƒÉn b·∫£n...</div>';

            // M√¥ ph·ªèng t√¨m ki·∫øm
            setTimeout(() => {
                const results = [];
                
                documents.forEach(doc => {
                    const lowerQuery = query.toLowerCase();
                    const lowerTitle = doc.title.toLowerCase();
                    
                    if (lowerTitle.includes(lowerQuery)) {
                        results.push({
                            title: doc.title,
                            url: doc.url,
                            snippet: `VƒÉn b·∫£n c√≥ ch·ª©a t·ª´ kh√≥a "${query}". Nh·∫•n v√†o link ƒë·ªÉ xem chi ti·∫øt.`,
                            relevance: 'cao'
                        });
                    }
                });

                displaySearchResults(results, query);
            }, 800);
        }

        // Hi·ªÉn th·ªã k·∫øt qu·∫£ t√¨m ki·∫øm
        function displaySearchResults(results, query) {
            const resultsDiv = document.getElementById('searchResults');
            
            if (results.length === 0) {
                resultsDiv.innerHTML = `
                    <div class="empty-state">
                        <h3>üòï Kh√¥ng t√¨m th·∫•y k·∫øt qu·∫£</h3>
                        <p>Kh√¥ng t√¨m th·∫•y vƒÉn b·∫£n n√†o ch·ª©a t·ª´ kh√≥a "${query}"</p>
                        <p style="margin-top: 10px; font-size: 0.9em;">G·ª£i √Ω: Th·ª≠ t√¨m ki·∫øm v·ªõi t·ª´ kh√≥a kh√°c ho·∫∑c ki·ªÉm tra l·∫°i ch√≠nh t·∫£</p>
                    </div>
                `;
                return;
            }

            let html = `<h3 style="margin-bottom: 15px;">T√¨m th·∫•y ${results.length} k·∫øt qu·∫£ cho "${query}":</h3>`;
            
            results.forEach(result => {
                html += `
                    <div class="result-item">
                        <h3>${result.title}</h3>
                        <p>${result.snippet}</p>
                        <div class="source">
                            <a href="${result.url}" target="_blank">üîó Xem vƒÉn b·∫£n ƒë·∫ßy ƒë·ªß</a>
                        </div>
                    </div>
                `;
            });

            resultsDiv.innerHTML = html;
        }

        // C·∫≠p nh·∫≠t giao di·ªán
        function updateUI() {
            updateDocumentList();
            updateStats();
        }

        // C·∫≠p nh·∫≠t danh s√°ch vƒÉn b·∫£n
        function updateDocumentList() {
            const listDiv = document.getElementById('documentList');
            
            if (documents.length === 0) {
                listDiv.innerHTML = '<div class="empty-state">Ch∆∞a c√≥ vƒÉn b·∫£n n√†o. H√£y th√™m vƒÉn b·∫£n ƒë·∫ßu ti√™n!</div>';
                return;
            }

            let html = '';
            documents.forEach(doc => {
                html += `
                    <div class="document-item">
                        <div>
                            <strong>${doc.title}</strong>
                            <br>
                            <small style="color: #999;">Th√™m ng√†y: ${doc.addedDate}</small>
                            <br>
                            <a href="${doc.url}" target="_blank">üîó Xem vƒÉn b·∫£n</a>
                        </div>
                        <button class="delete-btn" onclick="deleteDocument(${doc.id})">X√≥a</button>
                    </div>
                `;
            });

            listDiv.innerHTML = html;
        }

        // C·∫≠p nh·∫≠t th·ªëng k√™
        function updateStats() {
            document.getElementById('docCount').textContent = documents.length;
            document.getElementById('searchCount').textContent = searchCounter;
        }

        // Enter ƒë·ªÉ submit
        document.getElementById('docUrl').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') addDocument();
        });

        document.getElementById('searchQuery').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') searchDocuments();
        });

        // Kh·ªüi t·∫°o
        loadData();
    </script>
